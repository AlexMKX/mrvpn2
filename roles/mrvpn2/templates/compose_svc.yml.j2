services:
    {{item.key}}_pdns:
        depends_on:
          {{item.key}}:
            condition: service_healthy
            restart: true
        restart: always
        build: {{mrvpn_svcs_root}}/powerdns
        cap_add: [ NET_ADMIN ]
        volumes:
            - "{{mrvpn_svcs_root}}/powerdns/etc:/etc/powerdns"
        network_mode: "service:{{item.key}}"
        environment:
            - "MRVPN_INTERFACES={{item.value | join (',')}}"
        logging:
            driver: "json-file"
            options:
                max-size: "128m"
                max-file: "3"
    {{item.key}}_ipt:
        depends_on:
          {{item.key}}:
            condition: service_healthy
            restart: true
        restart: always
        build: {{mrvpn_svcs_root}}/ipt-server
        cap_add: [ NET_ADMIN ]
        network_mode: "service:{{item.key}}"
        environment:
            - "CONFIG=/settings.yaml"
       #     - "LOGLEVEL=DEBUG"
        volumes:
            - "{{ipt_server_config_file.dest}}:/settings.yaml"
        logging:
            driver: "json-file"
            options:
                max-size: "128m"
                max-file: "3"
    {{item.key}}_frr:
        depends_on:
          {{item.key}}:
            condition: service_healthy
            restart: true
        restart: always
        cap_add:
            - CAP_NET_RAW
            - NET_ADMIN
            - SYS_ADMIN
        privileged: false
        image: quay.io/frrouting/frr:9.1.0
        network_mode: "service:{{item.key}}"
        volumes:
            - {{mrvpn_svcs_root}}/frr:/etc/frr:rw
        logging:
            driver: "json-file"
            options:
                max-size: "128m"
                max-file: "3"
